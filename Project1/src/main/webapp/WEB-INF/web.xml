<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>Project1</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.jsp</welcome-file>
    <welcome-file>default.htm</welcome-file>
  </welcome-file-list>
  
  <servlet>
	<!-- aliases 설정 : 서블릿 이름과 실제 서블릿 클래스에 연결 -->
	<servlet-name>CustomerFrontController</servlet-name>
	<servlet-class>com.itwillbs.customer.action.CustomerFrontController</servlet-class>
</servlet>
<servlet-mapping>
	<!-- 매핑 : 실제 URL을 서블릿에 연결 -->
	<servlet-name>CustomerFrontController</servlet-name>
	<url-pattern>*.cu</url-pattern>
</servlet-mapping>
  
  
  <servlet>
	<!-- aliases 설정 : 서블릿 이름과 실제 서블릿 클래스에 연결 -->
	<servlet-name>ReviewFrontController</servlet-name>
	<servlet-class>com.itwillbs.review.action.ReviewFrontController</servlet-class>
</servlet>
<servlet-mapping>
	<!-- 매핑 : 실제 URL을 서블릿에 연결 -->
	<servlet-name>ReviewFrontController</servlet-name>
	<url-pattern>*.rv</url-pattern>
</servlet-mapping>  
  
</web-app>
