<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>ONDA</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.jsp</welcome-file>
    <welcome-file>default.htm</welcome-file>
  </welcome-file-list>
    
 <!-- 가상주소를 실제파일 연결하는 파일경로 
=> 처리담당자(서블릿) 파일 => 주소매핑파일 지정
=> 개발자가 주소매핑 작업을 하도록 처리담당자(서블릿) 지정 -->
<!-- http:/localhost:8080/Model2/insertForm.me -->
<servlet>
	<!-- aliases 설정 : 서블릿 이름과 실제 서블릿 클래스에 연결 -->
	<servlet-name>CustomerFrontController</servlet-name>
	<servlet-class>com.itwillbs.customer.action.CustomerFrontController</servlet-class>
</servlet>

<servlet-mapping>
	<!-- 매핑 : 실제 URL을 서블릿에 연결 -->
	<servlet-name>CustomerFrontController</servlet-name>
	<url-pattern>*.cu</url-pattern>
</servlet-mapping>

</web-app>